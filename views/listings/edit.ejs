<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" name="listing[title]" type="text" class="form-control custom-input" value="<%= listing.title %>" required />
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Title required</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" class="form-control custom-input" required><%= listing.description %></textarea>
        <div class="valid-feedback">Description Looks good!</div>
        <div class="invalid-feedback">Add a short description</div>
      </div>

      <!-- Image Link (Optional) -->
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input id="image" name="listing[image]" type="text" class="form-control custom-input" value="<%= listing.image %>" />
        <div class="valid-feedback">You can enter an image for better understanding</div>
      </div>

      <!-- Price -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input id="price" name="listing[price]" type="number" class="form-control custom-input" value="<%= listing.price %>" required />
          <div class="valid-feedback">Price added!</div>
          <div class="invalid-feedback">Price required</div>
        </div>

        <!-- Contact -->
        <div class="mb-3 col-md-8">
          <label for="contact" class="form-label">Contact</label>
          <input id="contact" name="listing[contact]" type="text" class="form-control custom-input" value="<%= listing.contact %>" required />
          <div class="valid-feedback">Contact added!</div>
          <div class="invalid-feedback">Contact details required</div>
        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input id="country" name="listing[country]" type="text" class="form-control custom-input" value="<%= listing.country %>" required />
        <div class="valid-feedback">Country added!</div>
        <div class="invalid-feedback">Country details required</div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input id="location" name="listing[location]" type="text" class="form-control custom-input" value="<%= listing.location %>" required />
        <div class="valid-feedback">Location added!</div>
        <div class="invalid-feedback">Location details required</div>
      </div>
      <button class="btn-light" type="submit">Save</button>
      <button class="btn-light" type="reset">Reset</button>
    </form>
  </div>
</div>
